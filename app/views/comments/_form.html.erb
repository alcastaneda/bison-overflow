<div class='content'>
  <%= form_for [@commentable, Comment.new] do |f| %>
    <% if @comment.errors.any? %>
      <div id="error">
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
      <%= f.label :content %><br>
      <%= f.text_area :content %>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>